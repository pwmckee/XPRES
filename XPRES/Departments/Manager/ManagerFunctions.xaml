<Window x:Class="XPRES.Departments.Manager.ManagerFunctions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XPRES.Departments.Manager"
        mc:Ignorable="d"
        Title="Manager" Height="300" Width="300">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                <GradientStop Color="#FF2A2A2B" Offset="0.253" />
                <GradientStop Color="#FF363636" Offset="0.511" />
                <GradientStop Color="#FF474747" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Manager Functions" HorizontalAlignment="Center" FontSize="25" />
            <Button Name="btnAddEmp" Content="Add Employees" HorizontalAlignment="Center" Width="150" Height="50" Margin="0,20,0,0" Click="btnAddEmp_Click" />
            <Button Name="btnEditEmp" Content="Edit Employees" HorizontalAlignment="Center" Width="150" Height="50" Margin="0,20,0,0" Click="btnEditEmp_Click" />
        </StackPanel>
    </Grid>
</Window>