<UserControl x:Class="XPRES.Departments.Inbound.Controls.MetricViewCat3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:XPRES.Departments.Inbound.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="50"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Name="SpCatName"
                        Grid.Column="0"
                        Orientation="Horizontal">
                <Image Width="8" Source="{StaticResource DiamondBullet}" />
                <TextBox Name="TxtCatName"
                         Grid.Column="0"
                         Margin="5,0,0,0"
                         FontSize="20"
                         Style="{StaticResource LikeALabel}"
                         Text="{Binding CatName}"
                         TextAlignment="Left" />
            </StackPanel>
            <Button Name="BtnCalc"
                    Grid.Column="0"
                    Width="24"
                    Height="24"
                    Command="{Binding GetMicSumCommand}"
                    Visibility="Collapsed">
                <Image Source="{StaticResource Calculator}" />
            </Button>

            <TextBox Name="TxtMicSum"
                     Grid.Column="1"
                     Margin="5,0,0,0"
                     FontSize="20"
                     Style="{StaticResource LikeALabel}"
                     Text="Subtotal"
                     TextAlignment="Left"
                     Visibility="Collapsed" />
            <TextBox Name="TxtVal"
                     Grid.Column="1"
                     Margin="5"
                     BorderBrush="{StaticResource CoolBlue}"
                     BorderThickness="1"
                     CaretBrush="White"
                     IsReadOnly="False"
                     Style="{StaticResource LikeALabel}"
                     TextAlignment="Right" />
            <TextBox Name="TxtNumVal"
                     Grid.Column="2"
                     MinWidth="50"
                     Margin="5"
                     BorderBrush="{StaticResource CoolBlue}"
                     BorderThickness="1"
                     CaretBrush="White"
                     IsReadOnly="False"
                     Style="{StaticResource LikeALabel}"
                     TextAlignment="Right"
                     Visibility="Collapsed" />
        </Grid>
    </Grid>
</UserControl>