                                   HorizontalAlignment="Right"
                                   Content="Percent Complete:"
                                   FontSize="12"
                                   FontWeight="Normal" />
                            <Label Name="lblPcnt"
                                   Grid.Row="6"
                                   Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   Content="{Binding CompPcnt}"
                                   FontSize="12"
                                   FontWeight="Normal" />
                        </Grid>
                    </Grid>
